<?xml version="1.0"?>

<PropertyList>
  <nopreview/>

   <name>ExternalFlame</name>
   <path>thrust_flame.ac</path>

   <offsets> 
    <x-m>0</x-m>
    <y-m>0</y-m>
    <z-m>0</z-m>
    <heading-deg>0</heading-deg>
   </offsets>

  <light>
    <name>augmentation_light</name>
    <type>spot</type>
    <priority>medium</priority>
    <position>
      <x-m>0</x-m>
      <y-m>0</y-m>
      <z-m>0</z-m>
    </position>
    <direction>
      <x>1</x>
      <y>0</y>
      <z>0</z>
    </direction>
    <ambient>
      <r>0.0</r>
      <g>0.0</g>
      <b>0.0</b>
      <a>1</a>
    </ambient>
    <diffuse>
      <r>1.0</r>
      <g>1.0</g>
      <b>1.0</b>
      <a>1</a>
    </diffuse>
    <specular>
      <r>1.0</r>
      <g>1.0</g>
      <b>1.0</b>
      <a>1</a>
    </specular>
    <attenuation>
      <c>0.05</c>
      <l>0.027</l>
      <q>0.0028</q>
    </attenuation>
    <spot-cutoff>60</spot-cutoff>
    <spot-exponent>10</spot-exponent><!-- Lose half intensity at 20deg -->
    <range-m>100</range-m>
    <dim-factor>
      <property>sim/multiplay/generic/float[3]</property><!-- engines/engine[0]/nozzle-pos-norm -->
    </dim-factor>
  </light>
   
  <effect>
   <inherits-from>Aircraft/JA37/Models/Effects/engine/augmentationFlame</inherits-from>
   <object-name>Bounding_box</object-name>
  </effect>
  
  <animation>
    <type>noshadow</type>
    <object-name>Bounding_box</object-name>
  </animation>

  <animation>
    <type>select</type>
    <object-name>Bounding_box</object-name>
    <object-name>augmentation_light</object-name>
    <nopreview/>
    <condition>
     <property>/sim/rendering/shaders/skydome</property><!-- als -->
     <property>sim/multiplay/generic/bool[10]</property><!-- engines/engine/augmentation -->
     <not>
       <property>sim/multiplay/generic/bool[11]</property><!-- engines/engine/is-reversed -->
     </not>
    </condition>
  </animation>

  <animation>
    <type>scale</type>
    <object-name>Bounding_box</object-name>
    <nopreview/>
    <property>sim/multiplay/generic/float[3]</property><!-- engines/engine[0]/nozzle-pos-norm -->
    <x-min>0.2</x-min>
    <y-min>0.565</y-min>
    <z-min>0.565</z-min>
    <x-max>1.0</x-max>
    <y-max>0.565</y-max>
    <z-max>0.565</z-max>
    <x-factor>1.0</x-factor>
    <y-factor>1.0</y-factor>
    <z-factor>1.0</z-factor>
  </animation>

</PropertyList>
