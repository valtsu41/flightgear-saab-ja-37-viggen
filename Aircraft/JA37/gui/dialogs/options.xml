<?xml version="1.0" encoding="iso-8859-1"?>

<PropertyList>
  <name>saab37options</name>
  <modal type="bool">false</modal>
  <layout>vbox</layout>
  <halign>left</halign>

  <nasal>
    <open>
      var type_to_anno = {
          1: "1971",
          2: "1979",
          3: "1997",
      };

      var update_gsuit_anno = func {
          var type = getprop("/ja37/effect/g-suit");
          var anno = type_to_anno[type];
          setprop("/ja37/effect/g-suit-anno", anno);
      }

      update_gsuit_anno();
    </open>
  </nasal>
  
  <group>
    <layout>hbox</layout>
    <empty><stretch>1</stretch></empty>
    <text><label>Options</label></text>
    <empty><stretch>1</stretch></empty>
    <button>
      <pref-width>16</pref-width>
      <pref-height>16</pref-height>
      <legend></legend>
      <default>1</default>
      <keynum>27</keynum>
      <border>2</border>
      <binding>
        <command>dialog-close</command>
      </binding>
      <binding>
        <command>dialog-apply</command>
      </binding>
    </button>
  </group>

  <hrule/>

  <group>
    <layout>table</layout>

    <!-- G suit -->
    <slider>
      <row>0</row>
      <col>0</col>
      <property>/ja37/effect/g-suit</property>
      <min>1</min>
      <max>3</max>
      <step>1</step>
      <binding>
        <command>dialog-apply</command>
      </binding>
      <binding>
        <command>nasal</command>
        <script>update_gsuit_anno();</script>
      </binding>
    </slider>

    <text>
      <row>0</row>
      <col>1</col>
      <halign>left</halign>
      <label>G-suit quality: anno 1997</label>
      <format>G-suit quality: anno %s</format>
      <property>/ja37/effect/g-suit-anno</property>
      <live>true</live>
    </text>

    <!-- Swedish cockpit -->
    <checkbox>
      <row>1</row>
      <col>0</col>
      <property>/ja37/effect/swedish-labels</property>
      <live>true</live>
      <binding>
        <command>dialog-apply</command>
      </binding>
    </checkbox>

    <text>
      <row>1</row>
      <col>1</col>
      <halign>left</halign>
      <label>Cockpit labels in Swedish (default: English)</label>
    </text>

    <!-- Swedish HUD/TI (JA only) -->
    <checkbox>
      <row>2</row>
      <col>0</col>
      <property>/ja37/hud/units-metric</property>
      <live>true</live>
      <binding>
        <command>dialog-apply</command>
      </binding>
      <visible>
        <equals>
          <property>/ja37/systems/variant</property>
          <value>0</value>
        </equals>
      </visible>
    </checkbox>

    <text>
      <row>2</row>
      <col>1</col>
      <halign>left</halign>
      <label>HUD/TI in metric units and Swedish (default: imperial and English)</label>
      <visible>
        <equals>
          <property>/ja37/systems/variant</property>
          <value>0</value>
        </equals>
      </visible>
    </text>

    <!-- Automatic ground crew settings (AJS only) -->
    <checkbox>
      <row>2</row>
      <col>0</col>
      <property>/controls/armament/ground-panel/automatic-settings</property>
      <live>true</live>
      <binding>
        <command>dialog-apply</command>
      </binding>
      <visible>
        <not-equals>
          <property>/ja37/systems/variant</property>
          <value>0</value>
        </not-equals>
      </visible>
    </checkbox>

    <text>
      <row>2</row>
      <col>1</col>
      <halign>left</halign>
      <label>Automatic ground crew weapon panel settings (AJS-37 > Ground Crew Panel)</label>
      <visible>
        <not-equals>
          <property>/ja37/systems/variant</property>
          <value>0</value>
        </not-equals>
      </visible>
    </text>


    <!-- TI menus (JA only) -->
    <checkbox>
      <row>3</row>
      <col>0</col>
      <property>/ja37/displays/show-full-menus</property>
      <live>true</live>
      <binding>
        <command>dialog-apply</command>
      </binding>
      <visible>
        <equals>
          <property>/ja37/systems/variant</property>
          <value>0</value>
        </equals>
      </visible>
    </checkbox>

    <text>
      <row>3</row>
      <col>1</col>
      <halign>left</halign>
      <label>TI Display: show non-functional menu items</label>
      <visible>
        <equals>
          <property>/ja37/systems/variant</property>
          <value>0</value>
        </equals>
      </visible>
    </text>

    <!-- TI map -->
    <checkbox>
      <row>4</row>
      <col>0</col>
      <property>/ja37/displays/live-map</property>
      <live>true</live>
      <binding>
        <command>dialog-apply</command>
      </binding>
      <visible>
        <equals>
          <property>/ja37/systems/variant</property>
          <value>0</value>
        </equals>
      </visible>
    </checkbox>

    <text>
      <row>4</row>
      <col>1</col>
      <halign>left</halign>
      <label>TI Display: use Internet to fetch map</label>
      <visible>
        <equals>
          <property>/ja37/systems/variant</property>
          <value>0</value>
        </equals>
      </visible>
    </text>

    <!-- Outside rust -->
    <checkbox>
      <row>5</row>
      <col>0</col>
      <property>/ja37/effect/rust-outside</property>
      <live>true</live>
      <binding>
        <command>dialog-apply</command>
      </binding>
    </checkbox>

    <text>
      <row>5</row>
      <col>1</col>
      <halign>left</halign>
      <label>Rust on fuselage (requires ALS)</label>
    </text>

    <checkbox>
      <row>6</row>
      <col>0</col>
      <property>/ja37/effect/rust-inside</property>
      <live>true</live>
      <binding>
        <command>dialog-apply</command>
      </binding>
    </checkbox>

    <text>
      <row>6</row>
      <col>1</col>
      <halign>left</halign>
      <label>Rust in cockpit (requires ALS)</label>
    </text>

    <hrule>
      <row>7</row>
      <col>0</col>
      <colspan>2</colspan>
    </hrule>

    <checkbox>
      <row>8</row>
      <col>0</col>
      <property>controls/displays/arrows-controls-cursor</property>
      <live>true</live>
      <binding>
        <command>dialog-apply</command>
      </binding>
    </checkbox>

    <text>
      <row>8</row>
      <col>1</col>
      <halign>left</halign>
      <label>Arrow keys control radar cursor, Enter clicks / selects</label>
    </text>

    <text>
      <row>9</row>
      <col>0</col>
      <colspan>2</colspan>
      <halign>left</halign>
      <label>Alternative controls for radar cursor:</label>
    </text>

    <text>
      <row>10</row>
      <col>0</col>
      <colspan>2</colspan>
      <halign>left</halign>
      <label> - Add joystick bindings for the cursor through File > Joystick Configuration</label>
    </text>

    <text>
      <row>11</row>
      <col>0</col>
      <colspan>2</colspan>
      <halign>left</halign>
      <label> - Manually edit joystick configuration files to bind the properties</label>
    </text>

    <text>
      <row>12</row>
      <col>0</col>
      <colspan>2</colspan>
      <halign>left</halign>
      <label>    /controls/displays/cursor-slew-x</label>
    </text>

    <text>
      <row>13</row>
      <col>0</col>
      <colspan>2</colspan>
      <halign>left</halign>
      <label>    /controls/displays/cursor-slew-y</label>
    </text>

    <text>
      <row>14</row>
      <col>0</col>
      <colspan>2</colspan>
      <halign>left</halign>
      <label>    /controls/displays/cursor-click</label>
    </text>

    <text>
      <row>15</row>
      <col>0</col>
      <colspan>2</colspan>
      <halign>left</halign>
      <label> - Press 'y' to control the cursor with the main flight controls. 'n' clicks.</label>
    </text>

    <hrule>
      <row>16</row>
      <col>0</col>
      <colspan>2</colspan>
    </hrule>

    <checkbox>
      <row>17</row>
      <col>0</col>
      <enable><property>/ja37/on-ground</property></enable>
      <property>/payload/armament/msg</property>
      <live>true</live>
      <binding>
        <command>dialog-apply</command>
      </binding>
    </checkbox>

    <text>
      <row>17</row>
      <col>1</col>
      <halign>left</halign>
      <label>Enable multiplayer damage</label>
    </text>

    <text>
      <row>18</row>
      <col>0</col>
      <colspan>2</colspan>
      <halign>left</halign>
      <label>This option allows to deal and receive damage from other compatible aircrafts,</label>
    </text>
    <text>
      <row>19</row>
      <col>0</col>
      <colspan>2</colspan>
      <halign>left</halign>
      <label>if they have also enabled it. It can only be toggled when stopped on the ground.</label>
    </text>
    <text>
      <row>20</row>
      <col>0</col>
      <colspan>2</colspan>
      <halign>left</halign>
      <label>Enabling this enforces some realism options, such as blackout, normal simulation</label>
    </text>
    <text>
      <row>21</row>
      <col>0</col>
      <colspan>2</colspan>
      <halign>left</halign>
      <label>speed, and disabling fuel, payload, and repair menus while in flight.</label>
    </text>
  </group>
</PropertyList>
